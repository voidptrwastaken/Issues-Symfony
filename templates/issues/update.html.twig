{% extends "base.html.twig" %}

{% block body %}
	<h1>Update existing issue</h1>

	{% if issue.resolutionStatus == 1 %}
		<p>You cannot update this issue, as it has already been solved<br>See the details
			<a href="/issues/{{ issue.id }}">here</a>
		</p>
	{% else %}
		<p>Update the current issue, or go back to
			<a href="../../home">existing</a>
			issues</p>
		<div class="displayForm">
			<form method="POST">
				<div>
					<label for="title">Title</label>
					<input type="text" name="title" id="title" placeholder="title goes here" value="{{ issue.title }}"/>
				</div>
				<div>
					<label for="description">Description</label>
					<textarea type="text" name="description" id="description" placeholder="description goes here">{{ issue.description }}</textarea>
				</div>
				<div>
					<label for="severity_level">Choose a severity level:</label>

					<select name="severity" id="severity_level">
						{% if issue.severity == 1 %}
							<option value="1">Low</option>
						{% elseif issue.severity == 2 %}
							<option value="2">Medium</option>
						{% elseif issue.severity == 3 %}
							<option value="3">High</option>
						{% elseif issue.severity == 4 %}
							<option value="4">Critical</option>
						{% endif %}
						<option value="1">Low</option>
						<option value="2">Medium</option>
						<option value="3">High</option>
						<option value="4">Critical</option>
					</select>
				</div>
				<div>
					<button type="submit">Update</button>
				</div>
			</form>
		</div>
	{% endif %}
{% endblock %}
