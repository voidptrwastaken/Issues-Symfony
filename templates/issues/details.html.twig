{% block body%}
	<h1>
		Displaying details for Issue #{{ id }}:<br>
		<strong>{{ issue.Title }}</strong>
	</h1>

	<p>Go back to
		<a href="../home">all issues</a>
	</p>
	<p>
		<strong>ID:</strong>
		{{ issue.id }}
	</p>
	<p>
		<strong>Title:</strong>
		{{ issue.title }}
	</p>
	<p>
		<strong>Description:</strong>
		{{ issue.description }}
	</p>
	<p>
		<strong>Submitted on:</strong>
		{{ issue.submissionDate|date }}
	</p>
	<p>
		<strong>Last modified on:</strong>
		{{ issue.modificationDate|date }}
	</p>
	<p>
		<strong>Severity:</strong>
		{% if issue.severity == 1 %}
			Low
		{% elseif issue.severity == 2 %}
			Medium
		{% elseif issue.severity == 3 %}
			High
		{% elseif issue.severity == 4 %}
			Critical
		{% endif %}
	</p>
	<p>
		<strong>Status:</strong>
		{{ issue.resolutionDate|date }}
	</p>
{% endblock %}
